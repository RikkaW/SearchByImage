<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="screen">

    <PreferenceCategory
        android:key="category_advance"
        android:order="7"
        android:title="@string/advance">

        <Preference
            android:key="advance"
            android:title="@string/custom_search_engine">
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_night_mode"
        android:order="7"
        android:title="@string/night_mode">

        <SimpleMenuPreference
            android:key="night_mode"
            android:title="@string/night_mode"
            android:summary="%s"
            android:entries="@array/night_mode"
            android:entryValues="@array/night_mode_value"
            android:defaultValue="-1"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="about"
        android:order="9"
        android:title="@string/about">

        <Preference
            android:key="contact"
            android:summary="@string/contact_detail"
            android:title="@string/contact">
        </Preference>

        <Preference
            android:key="donate"
            android:title="@string/donate"/>

        <Preference
            android:summary="@string/rate_summary"
            android:title="@string/rate">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://play.google.com/store/apps/details?id=rikka.searchbyimage2"/>
        </Preference>

        <Preference
            android:key="version"
            android:title="@string/build_version">

        </Preference>

        <!--<Preference
            android:key="open_source"
            android:summary="https://github.com/RikkaW/SearchByImage"
            android:title="@string/open_source">
        </Preference>-->

    </PreferenceCategory>
</PreferenceScreen>